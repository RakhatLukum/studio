
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        }
      },
      "required": ["id", "email", "createdAt"]
    },
    "HistoryItem": {
      "title": "HistoryItem",
      "description": "A generic container for different types of user actions saved to their history.",
      "oneOf": [
        { "$ref": "#/entities/TailoredResume" },
        { "$ref": "#/entities/CreatedResume" },
        { "$ref": "#/entities/CareerRecommendation" },
        { "$ref": "#/entities/DevelopmentPlan" },
        { "$ref": "#/entities/InterviewSession" }
      ]
    },
    "TailoredResume": {
      "title": "TailoredResume",
      "type": "object",
      "description": "Represents a tailored resume action.",
      "properties": {
        "type": { "type": "string", "const": "resume" },
        "userId": { "type": "string" },
        "resumeOriginal": { "type": "string" },
        "jobDescription": { "type": "string" },
        "language": { "type": "string", "enum": ["en", "ru", "kz"] },
        "tailoredResumeMd": { "type": "string" },
        "changeLog": { "type": "array", "items": { "type": "string" } },
        "matchScore": { "type": "number" },
        "scoreRationale": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "userId", "jobDescription", "tailoredResumeMd", "createdAt"]
    },
     "CreatedResume": {
      "title": "CreatedResume",
      "type": "object",
      "description": "Represents a resume created from scratch.",
      "properties": {
        "type": { "type": "string", "const": "created_resume" },
        "userId": { "type": "string" },
        "formData": { "type": "object" },
        "generatedResumeMd": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "userId", "formData", "generatedResumeMd", "createdAt"]
    },
    "CareerRecommendation": {
      "title": "CareerRecommendation",
      "type": "object",
      "description": "Represents a career recommendation action.",
      "properties": {
        "type": { "type": "string", "const": "career" },
        "userId": { "type": "string" },
        "interests": { "type": "string" },
        "recommendations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "careerName": { "type": "string" },
              "rationale": { "type": "string" }
            },
            "required": ["careerName", "rationale"]
          }
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "userId", "interests", "recommendations", "createdAt"]
    },
    "DevelopmentPlan": {
      "title": "DevelopmentPlan",
      "type": "object",
      "description": "Represents a development plan generation action.",
      "properties": {
        "type": { "type": "string", "const": "plan" },
        "userId": { "type": "string" },
        "careerName": { "type": "string" },
        "developmentPlanMd": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "userId", "careerName", "developmentPlanMd", "createdAt"]
    },
    "InterviewSession": {
      "title": "InterviewSession",
      "type": "object",
      "description": "Represents a practice interview session.",
      "properties": {
        "type": { "type": "string", "const": "interview" },
        "userId": { "type": "string" },
        "jobRole": { "type": "string" },
        "chatHistory": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "string", "enum": ["user", "assistant", "feedback"] },
              "content": { "type": "string" }
            },
            "required": ["role", "content"]
          }
        },
        "summary": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "userId", "jobRole", "chatHistory", "summary", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/history/{historyId}": {
      "schema": { "$ref": "#/entities/HistoryItem" },
      "description": "Stores a log of all user actions, such as tailored resumes, career recommendations, and interview practices."
    }
  }
}

    