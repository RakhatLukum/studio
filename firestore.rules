
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS
    // Path: /users/{userId}
    // Schema: User
    match /users/{userId} {
      // READ: A user can only read their own document.
      allow get: if isOwner(userId);
      
      // LIST: Disallow listing all users for security.
      allow list: if false;

      // CREATE: A user can only create their own user document.
      // The incoming document's ID must match the user's UID.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      
      // UPDATE: A user can only update their own document.
      // The document ID must remain unchanged.
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      
      // DELETE: A user can only delete their own document.
      allow delete: if isOwner(userId);

      // HISTORY subcollection
      // A user can read, list and create their own history items.
      match /history/{historyId} {
        allow read, list, create: if isOwner(userId);
        allow update, delete: if false; // History is immutable
      }
    }
  }
}
