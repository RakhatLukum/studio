
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // USERS
    // Path: /users/{userId}
    // Schema: User
    match /users/{userId} {
      // READ: A user can only read their own document.
      allow get: if isOwner(userId);
      
      // LIST: Disallow listing all users for security.
      allow list: if false;

      // CREATE: A user can only create their own user document.
      // The incoming document's ID must match the user's UID.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      
      // UPDATE: A user can only update their own document.
      // The document ID must remain unchanged.
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      
      // DELETE: A user can only delete their own document.
      allow delete: if isOwner(userId);
    }

    // TAILORED RESUMES
    // Path: /users/{userId}/tailoredResumes/{tailoredResumeId}
    // Schema: TailoredResume
    match /users/{userId}/tailoredResumes/{tailoredResumeId} {
      // READ, LIST: A user can only read and list their own tailored resumes.
      allow get, list: if isOwner(userId);
      
      // CREATE: A user can only create a tailored resume under their own user document.
      // The incoming document's userId must match the user's UID.
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      
      // UPDATE: A user can only update their own resume.
      // The userId field must remain unchanged.
      allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId;
      
      // DELETE: A user can only delete their own resume.
      allow delete: if isOwner(userId);
    }

    // PROMPTS
    // Path: /prompts/{promptId}
    // Schema: Prompt
    match /prompts/{promptId} {
      // READ, LIST: Any signed-in user can read/list prompts.
      // The client-side code is responsible for filtering prompts by user.
      allow get, list: if isSignedIn();
      
      // CREATE: A user can create a prompt, and they must be the owner.
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // UPDATE, DELETE: Disallow updating/deleting prompts for simplicity.
      allow update, delete: if false;
    }
  }
}
